@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">

    <h3 class="mt-4 text-center"><strong class="text-uppercase">@Localizer["deletePhrasePT1"]<span class="text-danger">[@Model.Name]</span>@Localizer["deletePhrasePT2"]</strong></h3>


    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <dt class="col-sm-4 fw-bold">@Localizer["roleName"]</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <hr />
        </dl>
    </div>
</div>


<div class="text-center">

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirm">
            @Localizer["delete"]
        </button>
        <div class="modal fade" id="deleteConfirm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteConfirmLabel">@Localizer["deleteConfirm"]</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Localizer["close"]"></button>
                    </div>
                    <div class="modal-body">
                        @Localizer["deletePhrasePT1"]<strong class="text-danger text-uppercase">[@Model.Name]</strong> @Localizer["deletePhrasePT2"]
                    </div>
                    <hr />
                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary me-3 w-25" data-bs-dismiss="modal">@Localizer["no"]</button>
                        <button type="submit" class="btn btn-danger ms-3 w-25">@Localizer["yes"]</button>
                    </div>
                </div>
            </div>
        </div>        <a asp-action="Index" class="btn btn-secondary">@Localizer["backToList"]</a>
    </form>

</div>
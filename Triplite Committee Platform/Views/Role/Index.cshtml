@model IList<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card p-3 mt-5 rounded-4 mx-auto">
    <div class="row">
        <div class="col-sm-4">
            <strong class="fs-3">@Localizer["rolesList"]</strong>
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 text-end">
            <a asp-action="Create" class="text-decoration-none text-light btn btn-primary me-1">
                <strong class="fs-5">@Localizer["addRole"]</strong>
            </a>
        </div>
    </div>
    <hr />
    <table class="table align-middle mb-0 w-100 bg-white table-striped" id="DTable">
        <thead class="bg-darck">
            <tr>
                <th class="text-center" >@Localizer["role"]</th>
                <th class="text-center">@Localizer["action"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="text-center align-items-center">
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.Name)</p
                                
                            </div>
                        </div>
                    </td>


                     

                    <td>
                        <div class="text-center">

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="@Localizer["editRole"]" id=""><i class="fa-solid fa-pen fs-5 text-primary"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="@Localizer["viewDetails"]" id=""><i class="fa-solid fa-circle-info fs-5 text-secondary"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="@Localizer["deleteRole"]" id=""><i class="fa-solid fa-trash fs-5 text-danger"></i></a>
                        </div> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



@* DataTable Library used to add filters to the tables *@
<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.bootstrap5.min.css" />
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.min.js"></script>


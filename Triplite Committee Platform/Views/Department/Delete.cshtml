@model Triplite_Committee_Platform.Models.DepartmentModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["DeleteMessage1"] != null)
{
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="alert alert-danger col-sm-4 text-center" role="alert">
            @TempData["DeleteMessage1"]
            <br />
            <br />
            @TempData["DeleteMessage2"]

        </div>
        <div class="col-sm-4"></div>
    </div>
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong class="text-uppercase">Are you sure you want to delete  <span class="text-danger"> @Html.DisplayFor(model => model.DeptName)</span> Department?</strong></h3>
    <p class=" text-uppercase text-center text-dark fw-bold mt-5">This Department belongs to the <span class="text-danger">@Html.DisplayFor(model => model.College.CollegeName)</span> College!</p>
    <div class="text-center pb-3"> 
    <form asp-action="Delete">
        <input type="hidden" asp-for="DeptNo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
    </form>
    </div>
    
</div>
<div class="text-center">
    <a asp-action="Index" asp-controller="College" class="btn btn-secondary">Back to List</a>
</div>



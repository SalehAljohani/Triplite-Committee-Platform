@model Triplite_Committee_Platform.Models.CollegeModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>@Model?.CollegeName</strong></h3>
    <hr />
    <div>
        <table class="table text-center">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Department Name</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Departments != null)
                {
                    var count = 0;
                    @foreach (var item in ViewBag.Departments)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.DeptName</td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
        <dl class="row ps-5">
        </dl>
    </div>
</div>
<div class="text-center">
    <a asp-action="Edit" class="btn btn-primary me-3" asp-route-id="@Model?.CollegeNo">Edit College</a>
    <a asp-action="Index" class="btn btn-secondary ms-3">Back to List</a>
</div>

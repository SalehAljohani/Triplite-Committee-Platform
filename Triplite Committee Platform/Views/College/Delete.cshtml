@model Triplite_Committee_Platform.Models.CollegeModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["DeleteMessage1"] != null)
{
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="alert alert-danger col-sm-4 text-center" role="alert">
            @TempData["DeleteMessage1"]
            <br />
            <br />
            @TempData["DeleteMessage2"]

        </div>
        <div class="col-sm-4"></div>
    </div>
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong class="text-uppercase">Are you sure you want to delete <span class="text-danger">[@Model?.CollegeName]</span> College?</strong></h3>
    <p class="text-center text-dark fw-bold mt-5">This College has the following Departments</p>
    <hr />
    <table class="table text-center">
        <thead>
            <tr>
                <th>#</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Departments != null)
            {
                var count = 1;
                @foreach (var item in ViewBag.Departments)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.DeptName</td>
                        <td>
                            <div class="text-center">
                                <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.DeptNo" class="btn btn-danger btn-md">Delete</a>
                            </div>
                        </td>
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
    <div class="text-center mb-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CollegeNo" />
            <input type="submit" value="Delete College" class="btn btn-danger w-25" />
        </form>
    </div>
</div>
<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
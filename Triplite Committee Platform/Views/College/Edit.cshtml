@model Triplite_Committee_Platform.Models.CollegeModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>Edit College</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CollegeNo" />


                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="CollegeName" for="CName" class="col-form-label text-center">College Name</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="CollegeName" id="CName" class="form-control" />
                        <span asp-validation-for="CollegeName" class="text-danger"></span>

                    </dd>
                </div>
                <hr />



                <div class="form-group mt-5  text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-25" />


                </div>

            </form>
        </dl>
    </div>
</div>


<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

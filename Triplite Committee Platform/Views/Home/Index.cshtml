@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var announcements = ViewData["Announce"] as List<AnnouncementModel>;
    var firstItem = announcements?.FirstOrDefault(); // Ensures we handle null case

}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}
@if (TempData["ConfirmEmail"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["ConfirmEmail"]
    </div>
}

@if (announcements != null)
{
    <div class="row mt-3">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div id="Announcement" class="carousel carousel-dark slide" data-bs-ride="carousel" data-bs-touch="false">
                <div class="carousel-inner">
                    @foreach (var item in announcements)
                    {
                        <div class="carousel-item @(item == firstItem ? "active" : "")">
                            <a href="@item.Link">
                                <div class="cards-warpper">
                                    <div class="card mx-auto text-center">
                                        <h5 class="card-title my-4">@item.Title</h5>
                                        <div class="row">
                                            <div class="col-sm-2"></div>
                                            <div class="col-sm-8">
                                                <p class="card-text mb-4 text-center">@item.Description</p>
                                            </div>
                                            <div class="col-sm-2"></div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">@Localizer["prev"]</span>
                </button>
                <button class="carousel-control-next mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">@Localizer["next"]</span>
                </button>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
}

<div class="card w-75 mx-auto mt-4 rounded-4 testcard">
    <div class="card-body">
        <div class="row">
            <h5 class="card-title mb-4">@Localizer["boardStatusAtCollege"]</h5>
            <div class="col-lg-4 col-md-6">
                <div class="card border rounded-3">
                    <div class="card-body">
                        <div class="stat-widget-five row">
                            <div class="card-stat-1 col-sm-4">
                                <i class="pe-7s-check"></i>
                            </div>
                            <div class="stat-content col-sm-8">
                                <div class="text-left dib">
                                    <div class="card-title"><strong>23569</strong></div>
                                    <div class="card-text mt-3">@Localizer["compBoards"]</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border rounded-3">
                    <div class="card-body">
                        <div class="stat-widget-five row">
                            <div class="card-stat-2 col-sm-4">
                                <i class="pe-7s-hourglass"></i>
                            </div>
                            <div class="stat-content col-sm-8">
                                <div class="text-left dib">
                                    <div class="card-title"><strong>23569</strong></div>
                                    <div class="card-text mt-3">@Localizer["currBoards"]</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border rounded-3">
                    <div class="card-body">
                        <div class="stat-widget-five row">
                            <div class="card-stat-3 col-sm-4">
                                <i class="pe-7s-albums"></i>
                            </div>
                            <div class="stat-content col-sm-8">
                                <div class="text-left dib">
                                    <div class="card-title"><strong>23569</strong></div>
                                    <div class="card-text mt-3">@Localizer["totBoards"]</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Triplite_Committee_Platform.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>Add User</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <form asp-action="Create" method="post" onsubmit="return validateRoles()">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="Name" class="col-form-label text-center">Name</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="" maxlength="35" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </dd>
                </div>
                <hr />
                
                
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="EmployeeID" class="col-form-label text-center">EmployeeID</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="EmployeeID" class="form-control" autocomplete="Id" aria-required="true" placeholder="" maxlength="10" maxlength="10" />
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>

                    </dd>
                </div>
                <hr />
                
                
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="Email" class="col-form-label text-center">Email</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </dd>
                </div>
                <hr />
                
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="PhoneNumber" class="col-form-label text-center">Phone</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="PhoneNumber" class="form-control" autocomplete="Phone" aria-required="true" placeholder="" maxlength="10" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </dd>
                </div>
                <hr />
                
                
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="DeptNo" class="col-form-label text-center">Department</label>
                    </dt>
                    <dd class="col-sm-8">
                        <select asp-for="DeptNo" asp-items="ViewBag.Departments" class="form-control">
                            <option disabled selected>Select Department</option>
                        </select>                        
                        <span asp-validation-for="DeptNo" class="text-danger"></span>

                    </dd>
                </div>
                <hr />
                
             
                
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="ListRoles" class="col-form-label text-center">Role</label>
                    </dt>
                    <dd class="col-sm-8">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check form-check-inline">
                                <input type="checkbox" id="@role.Id" name="ListRoles" value="@role.Id" onclick="return clearError()" />
                                <label class="form-check-label" for="@role.Id">@role.Name</label>
                            </div>
                        }
                        <span asp-validation-for="ListRoles" id="MustPick" class="text-danger"></span>
                    </dd>
                </div>
                <hr />

                <div class="form-group mt-5 text-center">
                    <input type="submit" value="Create" class="btn btn-primary w-25" />

                </div>

            </form>
        </dl>
    </div>
</div>




<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    // Function to validate admin picked at least one role for user
    function validateRoles() {
        var checkboxes = document.getElementsByName("ListRoles");
        var checked = false;
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                checked = true;
                break;
            }
        }
        if (!checked) {
            document.getElementById("MustPick").innerHTML = "Please select at least one role";
            return false;
        }
        return true;
    }

    function clearError() {
        document.getElementById("MustPick").innerHTML = "";
    }

</script>



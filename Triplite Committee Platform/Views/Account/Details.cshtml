@model Triplite_Committee_Platform.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>@Localizer["userDetails"]</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <dt class="col-sm-4 fw-bold">@Localizer["name"]</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <hr />

            <dt class="col-sm-4 fw-bold">@Localizer["empID"]</dt>
            <dd class="col-sm-8">@Model.EmployeeID</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["email"]</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["emailConfirmed"]</dt>
            <dd class="col-sm-8">@Model.EmailConfirmed</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["phone"]</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["phoneConfirmed"]</dt>
            <dd class="col-sm-8">@Model.PhoneNumberConfirmed</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["dept"]</dt>
            <dd class="col-sm-8">@Model.Department?.DeptName</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["roles"]</dt>
            <dd class="col-sm-8">
                @foreach (var role in Model.ListRoles)
                {
                    <span class="text-black">@role | </span>
                }
            </dd>
        </dl>
    </div>
</div>


<div class="text-center">

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-md">  @Localizer["editUser"] </a>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["backToList"]</a>
</div>

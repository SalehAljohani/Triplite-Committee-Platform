@model Triplite_Committee_Platform.ViewModels.EditUserViewModel
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Edit User ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject UserManager<UserModel> UserManager

<h1>Edit User</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group mt-3 w-75">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly disabled />
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="EmployeeID" class="control-label"></label>
                <input asp-for="EmployeeID" class="form-control" readonly disabled />
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly disabled />
            </div>
            <div class="form-group mt-4 mb-3 w-75">
                <label class="form-check-label" asp-for="EmailConfirmed">
                    Email Confirmed?
                </label>
            </div>
            <div>
                <label class="ms-3">
                    <strong class="ms-5 me-5">[@Model.EmailConfirmed]</strong>
                    <label class="ms-5">Change it?</label>
                    <input type="checkbox" class="form-check-input ms-2" asp-for="EmailConfirmed" />
                </label>
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-3 w-75">
                <label class="form-check-label" asp-for="PhoneNumberConfirmed">
                    Phone Number Confirmed?
                </label>
                <div class="mt-3">
                    <label class="ms-3">
                        <strong class="ms-5 me-5">[@Model.PhoneNumberConfirmed]</strong>
                        <label class="ms-5">Change it?</label>
                        <input type="checkbox" class="form-check-input ms-2" asp-for="PhoneNumberConfirmed" />
                    </label>
                </div>
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="DeptNo" class="control-label"></label>
                <select asp-for="DeptNo" asp-items="ViewBag.Departments" class="form-control"></select>
                <span asp-validation-for="DeptNo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3 w-75">
                <label asp-for="ListRoles">Role</label>
                    <div class="pt-5">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check form-check-inline">
                                <input type="checkbox" id="@role" name="ListRoles" value="@role" @(Model.ListRoles.Contains(role.ToString()) ? "checked" : "") onclick="return clearError()" />
                                <label class="form-check-label" for="@role">@role</label>
                            </div>
                        }
                    </div>
                <span asp-validation-for="ListRoles" id="MustPick" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 w-75">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3 w-75">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-md-center w-75">
                <input type="submit" value="Save" class="btn btn-primary w-50" />
            </div>
        </form>
    </div>

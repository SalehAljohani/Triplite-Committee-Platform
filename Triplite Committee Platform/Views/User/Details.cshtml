@model Triplite_Committee_Platform.ViewModels.UserRolesViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Details</h1>

<div>
    <h4>User ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@Model.EmployeeID</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Email Confirmed</dt>
        <dd class="col-sm-10">@Model.EmailConfirmed</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Phone Number Confirmed</dt>
        <dd class="col-sm-10">@Model.PhoneNumberConfirmed</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.DeptName</dd>

        <dt class="col-sm-2">Roles</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var role in Model.ListRoles)
                {
                    <li>@role</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<a asp-action="Index">Back to List</a>
@model Triplite_Committee_Platform.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = @Localizer["title"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1 class="text-center pt-4 pb-3">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-md-8 text-dark">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Code" type="hidden" />
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email" class="form-label">@Localizer["email"]</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["passMessage"]" />
                <label asp-for="Password" class="form-label">@Localizer["password"]</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["passConfirm"]" />
                <label asp-for="ConfirmPassword" class="form-label">@Localizer["confirmPass"]</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mb-5">@Localizer["reset"]</button>
        </form>
    </div>
    <div class="col-sm-2"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
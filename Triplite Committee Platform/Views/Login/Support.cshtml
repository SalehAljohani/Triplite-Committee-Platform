@model Triplite_Committee_Platform.Models.ContactModel
@{
    ViewData["Title"] = "Support";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Triplite Committee Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" rel="application/javascript">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="application/javascript">
    <script src="https://kit.fontawesome.com/0fc1c09fcd.js" crossorigin="anonymous"></script>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row mt-4 mb-1"></div>
            <div class="row mb-5">
                <div class="col-sm-5 d-sm-inline-flex justify-content-end pt-4">
                    <h4><strong>Taibah University</strong></h4>
                </div>
                <div class="col-sm-2 d-sm-inline-flex justify-content-center">
                    <img src="~/img/TLogo.png" alt="Logo" width="65px" height="75px">
                </div>
                <div class="col-sm-5 d-sm-inline-flex justify-content-start pt-4">
                    <h4><strong>Triplite Committee Platform</strong></h4>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row mt-5 mb-5">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="container-fluid shadow rounded-4 text-light w-100 mt-5" style="background-color:rgba(56, 56, 56, 0.85);">

                    <div class="pt-4 pb-3 text-center">
                        <h1>Contact Support</h1>
                    </div>
                    @if (TempData["Success"] != null)
                    {
                        <div class="row text-center">
                            <div class="col-sm-3"></div>
                            <div class="alert alert-success w-50 col-sm-6" role="alert">
                                @TempData["Success"]
                                <br />
                                @TempData["SuccessMessage"]
                            </div>
                            <div class="col-sm-3"></div>

                        </div>
                    }
                    <hr />
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4 text-dark">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-4 mt-3">
                                    <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="" />
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="" />
                                    <label asp-for="Name" class="form-label">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Subject" class="form-control" autocomplete="Name" aria-required="true" placeholder="" />
                                    <label asp-for="Subject" class="form-label">Subject</label>
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <textarea asp-for="Message" style="height: 120px;" class="form-control" autocomplete="Name" aria-required="true" placeholder="" id="txtArea"></textarea>
                                    <label asp-for="Message" class="form-label">Your Message</label>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <div class="mb-5 text-center">
                                    <button id="submit" type="submit" class="w-50 btn btn-lg btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-1"></div>
                        <div class="vertical-line col-md-1" id="vrLine" style="border-left: 1px solid white; height: 100%; min-height: 480px; opacity:0.4;"></div>
                        @if (ViewBag.SupportDetails != null)
                        {
                            <div class="col-sm-5">
                                <div class="mt-4 mb-3">
                                    <h5 class="text-start"><i class="fa-solid fa-envelope"></i> Email:</h5>
                                    <p class="pt-4 pb-3 ps-5 text-uppercase">@ViewBag.SupportDetails.ContactEmail</p>
                                </div>
                                <div class="mb-3">
                                    <h5 class="text-start"><i class="fa-solid fa-phone"></i> Phone: </h5>
                                    <p class="pt-4 pb-3 ps-5 text-uppercase">@ViewBag.SupportDetails.PhoneNumber</p>
                                </div>
                                <div class="mb-3">
                                    <h5 class="text-start"><i class="fa-solid fa-tty"></i> Telephone: </h5>
                                    <p class="pt-4 pb-3 ps-5 text-uppercase">@ViewBag.SupportDetails.TeleNumber</p>
                                </div>
                                <div>
                                    <h5 class="text-start"><i class="fa-solid fa-location-dot"></i> Location: </h5>
                                    <p class="pt-4 pb-3 ps-5 text-uppercase">@ViewBag.SupportDetails.Location</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-sm-5">
                                <div class="mt-5 mb-5"></div>
                                <p>sorry for any inconvince no other way to contact us at the moment</p>
                                <h3 class="text-center">Please use the form to contact us.</h3>
                            </div>
                        }
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4 text-center pb-3">
                            <p class="fs-5">
                                <a id="Login" class="text-light text-decoration-none text-start" asp-action="Index" asp-controller="Login"><strong>Go back to Login</strong></a>
                            </p>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
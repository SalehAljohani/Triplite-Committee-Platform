
@model IEnumerable<Triplite_Committee_Platform.Models.ContactModel>

@{
    ViewData["Title"] = "Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-75 p-3 mt-5 mx-auto">

    <div class="row">
        <div class="col-sm-4">
            <strong class="fs-3">Support Request</strong>
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 text-end">
        </div>
    </div>
    <hr />
    @if (TempData["Message"] != null)
    {
        <div class="row">
            <div class="col-4"></div>
            <div class="alert alert-success text-center col-4" role="alert">
                @TempData["Message"]
            </div>
            <div class="col-4"></div>
        </div>
    }
    <table class="table align-middle  bg-white w-100 " id="DTable">
        <thead class="bg-darck ">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>



        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">

                            <div>
                                <p class="text-dark mb-1">@item.Name</p>

                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div>
                                <p class="text-dark ms-0 mb-0">@item.Email</p>

                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">

                            <div>
                                <p class="text-dark ms-0 mb-0">@item.Subject</p>

                            </div>
                        </div>
                    </td>

                    <td>
                        <div class="d-flex align-items-center">

                            <div>
                                <p class="fw-bold ms-0 mb-0 text-dark text-truncate " style="max-width: 140px;"> @item.Message</p>
                                

                            </div>
                        </div>
                    </td>


                    <td>

                        <div class="d-flex  align-items-center">

                            <div>
                                  <p class="mb-0 badge fs-6 @(item.Status ? "text-bg-success" : "text-bg-danger")">@(item.Status ? "Yes" : "No") </p>


                            </div>
                        </div>
                    </td>



                    <td>
                        <div class="d-flex gap-1">
                            <a asp-action="Details" class="btn bg-opacity-10" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fs-4 text-primary"></i></a>
                            <a asp-action="Solved" class="btn bg-opacity-10" asp-route-id="@item.Id"><i class="fa-solid fa-circle-check fs-4 text-success"></i></a>
                            <a asp-action="Delete" class="btn bg-opacity-10" asp-route-id="@item.Id"><i class="fa-solid fa-trash fs-4 text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.bootstrap5.min.css" />
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#DTable').DataTable({

        });
    });
</script>
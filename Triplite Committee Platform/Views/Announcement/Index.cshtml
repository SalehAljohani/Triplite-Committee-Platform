@model IEnumerable<AnnouncementModel>
@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div id="Announcement" class="carousel carousel-dark slide" data-bs-ride="carousel" data-bs-touch="false">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    <div class="carousel-item @(item == Model.First() ? "active" : "")">
                        <a href="@item.Link">
                            <div class="cards-warpper">
                                <div class="card mx-auto text-center">
                                    <h5 class="card-title my-4">@item.Title</h5>
                                    <div class="row">
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-8">
                                            <p class="card-text mb-4 text-center">@item.Description</p>
                                        </div>
                                        <div class="col-sm-2"></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
            <button class="carousel-control-prev mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="card p-3 mt-5 mx-auto w-75">
    <div class="row">
        <div class="col-sm-4">
            <strong class="fs-3">Announcements</strong>
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 text-end">
            <a asp-action="Create" class="text-decoration-none text-light btn btn-primary me-1">
                <strong class="fs-5">Create Announcement</strong>
            </a>
        </div>
    </div>
    <hr />
    <table class="table align-middle  bg-white w-100 table-striped" id="DTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Link</th>
                <th>Department</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <p class="fw-bold mb-1 text-truncate" style="max-width: 180px">@item.Title</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <p class="fw-bold ms-0 mb-0 text-truncate" style="max-width: 180px">@item.Description</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <a href="@item.Link" class="link-primary">Announcement Link</a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <p class="text-muted mb-0">@item?.Department?.DeptName</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit User" id="iconhover"><i class="fa-solid fa-pen fs-4 text-primary"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="View Details" id="iconhover"><i class="fa-solid fa-circle-info fs-4 text-secondary"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete User" id="iconhover"><i class="fa-solid fa-trash fs-4 text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


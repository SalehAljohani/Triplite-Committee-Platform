@model Triplite_Committee_Platform.Models.AnnouncementModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div id="Announcement" class="carousel carousel-dark slide">
            <div class="carousel-inner">
                <div class="carousel-item active annonBg" data-bs-interval="8000">
                    <a href="@Model.Link">
                        <div class="cards-warpper">
                            <div class="card mx-auto text-center">
                                <h5 class="card-title my-4">@Model.Title</h5>
                                <div class="row">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-8">
                                        <p class="card-text mb-4 text-center">@Model.Description</p>
                                    </div>
                                    <div class="col-sm-2"></div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <button class="carousel-control-prev mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Localizer["prev"]</span>
            </button>
            <button class="carousel-control-next mb-3" type="button" data-bs-target="#Announcement" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Localizer["next"]</span>
            </button>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>@Model.Title @Localizer["details"]</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <dt class="col-sm-4 fw-bold">@Localizer["title"]</dt>
            <dd class="col-sm-8">@Model.Title</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["desc"]</dt>
            <dd class="col-sm-8">@Model.Description</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["link"]</dt>
            <dd class="col-sm-8"><a href="@Model.Link" class="link-primary">@Model.Link</a></dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["college"]</dt>
            <dd class="col-sm-8">@ViewBag.College</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["dept"]</dt>
            <dd class="col-sm-8">@Model?.Department?.DeptName</dd>
        </dl>
    </div>
</div>


<div class="text-center">

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-md">  @Localizer["edit"] @Model.Title </a>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["backToList"]</a>
</div>
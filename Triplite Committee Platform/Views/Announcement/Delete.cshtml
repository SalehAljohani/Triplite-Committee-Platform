@model Triplite_Committee_Platform.Models.AnnouncementModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">

    <h3 class="mt-4 text-center"><strong class="text-uppercase">@Localizer["sureYouWantToDelete"] <span class="text-danger">[@Model.Title]</span> @Localizer["announc"]</strong></h3>

    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <dt class="col-sm-4 fw-bold">@Localizer["title"]</dt>
            <dd class="col-sm-8">@Model.Title</dd>
            <hr />

            <dt class="col-sm-4 fw-bold">@Localizer["desc"]</dt>
            <dd class="col-sm-8">@Model.Description</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["link"]</dt>
            <dd class="col-sm-8"><a href="@Model.Link" class="link-primary">@Model.Link</a></dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["college"]</dt>
            <dd class="col-sm-8">@ViewBag.College</dd>
            <hr />
            <dt class="col-sm-4 fw-bold">@Localizer["dept"]</dt>
            <dd class="col-sm-8">@Model.Department?.DeptName</dd>
            <hr />
        </dl>
    </div>
</div>


<div class="text-center">

    <form asp-action="Delete">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirm">
            @Localizer["delete"]
        </button>
        <div class="modal fade" id="deleteConfirm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteConfirmLabel">@Localizer["deleteConfirm"]</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @Localizer["sureYouWantToDelete"] <strong class="text-danger text-uppercase">[@Model.Title]</strong> @Localizer["announc"]
                    </div>
                    <hr />
                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary me-3 w-25" data-bs-dismiss="modal">@Localizer["no"]</button>
                        <button type="submit" class="btn btn-danger ms-3 w-25">@Localizer["yes"]</button>
                    </div>
                </div>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary">@Localizer["backToList"]</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

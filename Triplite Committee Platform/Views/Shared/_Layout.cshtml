<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Triplite Committee Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="application/javascript">
    <script src="https://kit.fontawesome.com/0fc1c09fcd.js" crossorigin="anonymous"></script>
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <ul class="list-unstyled components mb-5">
                <li class="mt-5 mb-3">
                    <a class="nav_link pb-4" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-house fs-5"></i> <span class="nav_name ps-3">Home</span> </a>
                </li>
                <li class="mt-3 mb-3">
                    <a class="nav_link pb-4" asp-area="" asp-controller="Stats" asp-action="Index"> <i class="fa-solid fa-chart-simple fs-5"></i> <span class="nav_name ps-4">Stats</span> </a>
                </li>
                <li>
                <li class="mt-3 mb-3">
                    <a href="#manage" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle pb-4"><i class="fa-solid fa-gears fs-5"></i><span class="nav_name ps-3">Manage</span></a>
                    <ul class="collapse list-unstyled ps-3" id="manage">
                        <li class="mt-3 mb-3">
                            <a class="nav_link pb-3" asp-area="" asp-controller="College" asp-action="Index">
                                <i class="fa-solid fa-city fs-6"></i>
                                <span>Colleges</span>
                                </a>
                        </li>
                        <li class="mb-3">
                            <a class="nav_link pb-3" asp-area="" asp-controller="Department" asp-action="Index">
                                <i class="fa-solid fa-building fs-6"></i>
                                <span>Departments</span>
                            </a>
                        </li>
                        <li class="mb-3">
                            <a class="nav_link pb-3" asp-area="" asp-controller="Role" asp-action="Index">
                                <i><img src="~/img/locksmith.png" width="16px" height="16px"/></i>
                                <span>Roles</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav_link pb-3" asp-area="" asp-controller="Account" asp-action="Index">
                                <i class="fa-solid fa-users-gear fs-6"></i>
                                <span class="nav_name">Accounts</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="nav_link" asp-area="" asp-controller="Home" asp-action="Privacy"> <i class="fa-solid fa-eye-slash fs-5"></i> <span class="nav_name">Privacy</span> </a>
                </li>
            </ul>
            <div class="footer text-center pt-5" style="font-size: 12px; color:gainsboro;">
                <p>
                    Taibah University &copy; <br /><script>document.write(new Date().getFullYear());</script> <br /> Information System Department.
                </p>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa-solid fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <span class="fa fa-user"></span>
                </div>
            </nav>



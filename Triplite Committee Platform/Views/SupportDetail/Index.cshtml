        <div class="row p-3">
            <div class="col-sm-7">
                <strong class="fs-3">Information of support page</strong>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-4 text-end">
                <a asp-action="Create" class="text-decoration-none text-light btn btn-primary me-1">
                    <strong class="fs-5">Add Informaton</strong>
                </a>
            </div>
        </div>

    }
    else
    {
        <h3 class="mt-4 text-center g-3"><strong>Information of support page</strong></h3>
    }
    <hr />
     <div class="card-body">
            <div class="row g-3">
            @foreach (var item in Model)
            {
                 
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ContactEmail)</dt>
                <dd class="col-sm-8">@item.ContactEmail</dd>
                <hr />

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd class="col-sm-8">@item.PhoneNumber</dd>
                <hr />

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TeleNumber)</dt>
                <dd class="col-sm-8">@item.TeleNumber</dd>
                <hr />

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Location)</dt>
                <dd class="col-sm-8">@item.Location</dd>
          }
        </div>
            @if (Model == null || !Model.Any())
             {
                <div class="text-center">
                 <p> No Information in support page please add information </p>

                </div>

             }
    </div>           
</div>
 @foreach (var item in Model)
  {
    
    <div class="text-center">
        
        @if (Model != null || !Model.Any())
        {
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-3 ms-3">Edit Information</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ms-3 me-3">Delete Information</a>
        }

    </div>  
  }


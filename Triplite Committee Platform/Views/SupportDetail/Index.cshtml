@model IEnumerable<Triplite_Committee_Platform.Models.SupportDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    
    @if (Model == null || !Model.Any())
            {
      @* <div class="row mt-4">
        <div class="col-sm-5">
                <h3 class="fs-3"><strong>Information of support page </strong></h3>
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-4 text-end">

@model IEnumerable<Triplite_Committee_Platform.Models.SupportDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card p-3 mt-5 mx-auto rounded-4card p-3 mt-5 mx-auto rounded-4">

    <div class="row">
        <div class="col-sm-5">
            <strong class="fs-3">Information of support page</strong>
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-4 text-end">
            @if (Model == null)
            {
                <a asp-action="Create" class="text-decoration-none text-light btn btn-primary me-1">
                    <strong class="fs-5">Add Information</strong>
                </a>
            }
        </div>
    </div>
    <hr />

    <table class="table align-middle  bg-white w-100 table-striped" id="DTable">
        <thead class="bg-dark">
            <tr>
                <th class="text-center">
                   Contact Email
                </th>
                <th class="text-center">
                    Phone Number
                </th>
                <th class="text-center">
                    Telephone Number
                </th>
                <th class="text-center">
                    Location
                </th>
                <th class="text-center">
                    Action
                </th>

            </tr>
        </thead>



        <tbody>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="text-center align-items-center">

                            <div>
                            <p class=" mb-1">@item.ContactEmail</p>

                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="text-center align-items-center">

                            <div>
                            <p class=" ms-0 mb-0">@item.PhoneNumber</p>

                            </div>
                        </div>



                    </td>

                    <td>
                        <div class="text-center align-items-center">

                            <div>
                            <p class=" ms-0 mb-0">@item.TeleNumber</p>

                            </div>
                        </div>



                    </td>

                    <td>
                        <div class="text-center align-items-center">

                            <div>
                            <p class=" ms-0 mb-0">@item.Location</p>

                            </div>
                        </div>



                    </td>





                    <td>
                        <div class="text-center gap-1">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md " data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Information" id=""><i class="fa-solid fa-pen fs-5 text-primary "></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="View Details" id=""><i class="fa-solid fa-circle-info  fs-5 text-secondary"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn bg-opacity-10 btn-md" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Information" id=""><i class="fa-solid fa-trash fs-5 text-danger "></i></a>



                        </div>
                    </td>


                </tr>

            }
        </tbody>
    </table>
</div>


@* DataTable Library used to add filters to the tables *@
<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.bootstrap5.min.css" />
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.min.js"></script>


@model Triplite_Committee_Platform.Models.SupportDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>Edit Support Details</strong></h3>
<hr />
<div class="card-body">
    <dl class="row g-3">

        <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">
                <dt class="col-sm-4 fw-bold">
                    <label asp-for="ContactEmail" class="col-form-label control-label text-center">Contact Email</label>
                </dt>
                <dd class="col-sm-8">
                    <input asp-for="ContactEmail" class="form-control" autocomplete="Name" aria-required="true" placeholder="" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>

                </dd>
            </div>
            <hr />

            <div class="row">
                <dt class="col-sm-4 fw-bold">
                    <label asp-for="PhoneNumber" class="col-form-label text-center">Phone Number</label>
                </dt>
                <dd class="col-sm-8">
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="Phone" aria-required="true" placeholder="" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </dd>
            </div>
            <hr />

            <div class="row">
                <dt class="col-sm-4 fw-bold">
                    <label asp-for="TeleNumber" class="col-form-label control-label text-center">Telephone number</label>
                </dt>
                <dd class="col-sm-8">
                    <input asp-for="TeleNumber" class="form-control" aria-required="true" placeholder="" />
                    <span asp-validation-for="TeleNumber" class="text-danger"></span>

                </dd>
            </div>
            <hr />


            <div class="row">
                <dt class="col-sm-4 fw-bold">
                    <label asp-for="Location" class="col-form-label control-label text-center">Location</label>
                </dt>
                <dd class="col-sm-8">
                    <input asp-for="Location" class="form-control" aria-required="true" placeholder="" />
                    <span asp-validation-for="Location" class="text-danger"></span>

                </dd>
            </div>
            <hr />




            <div class="form-group mt-5 mb-3 text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-25" />

            </div>

        </form>
    </dl>
</div>
</div>






<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





@model Triplite_Committee_Platform.Models.SupportDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">

    <h3 class="mt-4 text-center"><strong class="text-uppercase">@Localizer["deletePhrase"] </strong></h3>


    <hr />
    <div class="card-body">
        <dl class="row g-3">

            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ContactEmail)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactEmail)</dd>
            <hr />

            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
            <hr />

            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TeleNumber)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TeleNumber)</dd>
            <hr />

            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>



        </dl>
    </div>
</div>


<div class="text-center">

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirm">
                Delete
            </button>
            <div class="modal fade" id="deleteConfirm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="deleteConfirmLabel">@Localizer["deleteConfirm"]</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Localizer["close"]"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete <strong class="text-danger text-uppercase">@Localizer["suppDetails"]</strong>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <button type="button" class="btn btn-secondary me-3 w-25" data-bs-dismiss="modal">@Localizer["no"]</button>
                            <button type="submit" class="btn btn-danger ms-3 w-25">@Localizer["yes"]</button>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-action="Index" class="btn btn-secondary">@Localizer["backToList"]</a>
    </form>
</div>
@model Triplite_Committee_Platform.Models.RequestTypeModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="alert alert-danger text-center alert-dismissible fade show col-sm-4" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="col-sm-4"></div>
    </div>
}
<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>Add Request Type</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="RequestTypeName" for="RName" class="col-form-label text-center">Request Type Name</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="RequestTypeName" id="RName" class="form-control" />
                        <span asp-validation-for="RequestTypeName" class="text-danger"></span>

                    </dd>
                </div>
                <hr />



                <div class="form-group mt-5  text-center">
                    <input type="submit" value="Create" class="btn btn-primary w-25" />


                </div>
            </form>
        </dl>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

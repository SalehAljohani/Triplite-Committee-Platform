@model Triplite_Committee_Platform.Models.ScholarshipModel

@{
    ViewData["Title"] = "New Scholarship Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card p-3 mt-5 w-75 rounded-4 mx-auto">

    <div class="text-center mb-5">
        <strong> <h3 class="mb-4 pt-4">New Scholarship Request</h3></strong>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4 text-center">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@TempData["Success"]</strong>
                    <p class="mt-3">
                        @TempData["SuccessMessage"]
                    </p>
                    <button type="button" class="btn-close mt-4 pt-5" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4 text-center">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>@TempData["Error"]</strong>
                    <p class="mt-3">
                        @TempData["ErrorMessage"]
                    </p>
                    <button type="button" class="btn-close mt-4 pt-5" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    }
    @if (ViewBag.existingBoard)
    {
        <form method="post" asp-action="ScholarshipDetails">
            <div asp-validation-summary="All"></div>
            <div class="row text-dark">
                <div class="col-sm-6">
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="nID">@Model.National_ID</p>
                        <label for="nID" asp-for="National_ID">National ID</label>
                        <span asp-validation-for="National_ID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="empID">@Model.EmployeeID</p>
                        <label for="empID" asp-for="EmployeeID">Employee ID</label>
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="name">@Model.Name</p>
                        <label for="name" asp-for="Name">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-4 mt-3 text-center text-white">
                        <h6 class="text-start ms-5 ps-4 text-dark mt-4 mb-3 fw-bolder">Scholarship Type</h6>
                        <div class="row text-dark fw-bold">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-3">
                                <span class="fs-6">@(Model.ScholarshipTypes.Contains("Language") ? "Language" : "")</span>
                            </div>
                            <div class="col-sm-3">
                                <span class="fs-6">@(Model.ScholarshipTypes.Contains("Master's") ? "Master's" : "")</span>
                            </div>
                            <div class="col-sm-2">
                                <span class="fs-6">@(Model.ScholarshipTypes.Contains("PhD") ? "PhD" : "")</span>
                            </div>
                            <div class="col-sm-1"></div>
                        </div>
                        <span asp-validation-for="ScholarshipTypes" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="phone">@Model.Phone</p>
                        <label for="phone" asp-for="Phone">Phone Number</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="email">@Model.Email</p>
                        <label for="email" asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating w-75 mx-auto text-center">
                        <p class="fs-5 form-control pb-5" id="degree">@Model.Degree</p>
                        <label for="degree" asp-for="Degree"></label>
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating w-75 mx-auto text-center">
                        <p class="fs-5 form-control pb-5" id="degree">@Model.Gender</p>
                        <label for="gender" asp-for="Gender"></label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="duration">@Model.Duration</p>
                        <label for="duration" asp-for="Duration"></label>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="general">@Model.GeneralMajor</p>
                        <label for="general" asp-for="GeneralMajor"></label>
                        <span asp-validation-for="GeneralMajor" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="specific">@Model.SpecificMajor</p>
                        <label for="specific" asp-for="SpecificMajor"></label>
                        <span asp-validation-for="SpecificMajor" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="city">@Model.City</p>
                        <label for="city" asp-for="City"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="country">@Model.Country</p>
                        <label for="country" asp-for="Country"></label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="univeristy">@Model.University</p>
                        <label for="univeristy" asp-for="University"></label>
                        <span asp-validation-for="University" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="date">@Model.Beginning_date.ToShortDateString()</p>
                        <label for="date" asp-for="Beginning_date"></label>
                        <span asp-validation-for="Beginning_date" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75 text-center">
                        <p class="fs-5 form-control pb-5" id="reqType">@ViewBag.RequestType.RequestTypeName</p>
                        <label for="reqType">Request Type</label>

                    </div>
                </div>
                <input asp-for="Status" hidden value="@Model.Status" />
                <input asp-for="DeptNo" hidden />
                <input name="ReqTypeId" hidden value="@ViewBag.RequestType.RequestTypeID" />
                <div class="form-group mt-5 mb-3 text-center">
                    <input type="submit" value="Save & Continue" class="btn btn-primary w-25 mt-4 mb-3 fw-bold" />
                </div>
            </div>
        </form>
    }
    else
    {

        <form method="post" asp-action="ScholarshipDetails">
            <div asp-validation-summary="All"></div>
            <div class="row text-dark">
                <div class="col-sm-6">
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" asp-for="National_ID" maxlength="10" class="form-control" placeholder="" id="nID" required>
                        <label for="nID" asp-for="National_ID">National ID</label>
                        <span asp-validation-for="National_ID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" asp-for="EmployeeID" maxlength="10" class="form-control" placeholder="" id="empID" required>
                        <label for="empID" asp-for="EmployeeID">Employee ID</label>
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" asp-for="Name" class="form-control" maxlength="40" placeholder="" id="name" required>
                        <label for="name" asp-for="Name">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mt-3 text-center text-white">
                        <h6 class="text-start ms-5 ps-4 text-dark mt-4 mb-3 fw-bolder">Scholarship Type</h6>
                        <input type="checkbox" id="language" name="ScholarshipTypes[]" value="Language" class="form-check-input form-floating text-black" @(Model.ScholarshipTypes.Contains("Language") ? "checked" : "") />
                        <label class="form-check-label text-dark me-4 fw-bold" for="language">Language</label>

                        <input type="checkbox" id="masters" name="ScholarshipTypes[]" value="Master's" class="form-check-input form-floating text-black" @(Model.ScholarshipTypes.Contains("Master's") ? "checked" : "") />
                        <label class="form-check-label text-dark me-4 fw-bold" for="masters">Master's</label>

                        <input type="checkbox" id="phd" name="ScholarshipTypes[]" value="PhD" class="form-check-input form-floating text-black" @(Model.ScholarshipTypes.Contains("PhD") ? "checked" : "") />
                        <label class="form-check-label text-dark fw-bold" for="phd">PhD</label>
                        <span asp-validation-for="ScholarshipTypes" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" class="form-control" asp-for="Phone" maxlength="25" placeholder="Phone number" required>
                        <label for="phone" asp-for="Phone">Phone Number</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                        <label for="email" asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating w-75 mx-auto">
                        <select id="Degree" name="Degree" class="form-select text-center" asp-for="Degree" required>
                            <option disabled selected>Degree</option>
                            <option>Bachelor's</option>
                            <option>Master's</option>
                        </select>
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating w-75 mx-auto">
                        <select id="gender" name="gender" class="form-select text-center" asp-for="Gender" required>
                            <option disabled selected>Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" class="form-control" asp-for="Duration" placeholder="Duration of study" required>
                        <label for="duration" asp-for="Duration">Duration of Study</label>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" class="form-control" asp-for="GeneralMajor" placeholder="General Specialization" id="generalS" required>
                        <label for="generalS" asp-for="GeneralMajor">General Specialization</label>
                        <span asp-validation-for="GeneralMajor" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" class="form-control" asp-for="SpecificMajor" placeholder="Specific Specialization" id="specificS">
                        <label for="specificS" asp-for="SpecificMajor">Specific Specialization</label>
                        <span asp-validation-for="SpecificMajor" class="text-danger"></span>
                    </div>

                    <div class="mb-4 mt-2 form-floating mx-auto w-75">
                        <input type="text" asp-for="City" class="form-control" placeholder="" id="city" required>
                        <label for="city" asp-for="City">City</label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" class="form-control" asp-for="Country" placeholder="Country" required>
                        <label for="country" asp-for="Country">Country</label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="text" asp-for="University" class="form-control" placeholder="University" required>
                        <label for="university" asp-for="University">University</label>
                        <span asp-validation-for="University" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating mx-auto w-75">
                        <input type="Date" asp-for="Beginning_date" class="form-control" placeholder="University" required>
                        <label for="university" asp-for="Beginning_date">Start Date</label>
                        <span asp-validation-for="Beginning_date" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-control py-3 w-75 mx-auto text-center">
                        <p class="fs-4 mb-0">@ViewBag.RequestType.RequestTypeName</p>
                    </div>
                </div>
                <input asp-for="Status" hidden value="@Model.Status" />
                <input asp-for="DeptNo" hidden />
                <input name="ReqTypeId" hidden value="@ViewBag.RequestType.RequestTypeID" />
                <div class="form-group mt-5 mb-3 text-center">
                    <input type="submit" value="Save & Continue" class="btn btn-primary w-25 mt-4 mb-3 fw-bold" />
                </div>
            </div>
        </form>
    }
</div>


<div class="text-center">
    <a asp-controller="Scholarship" asp-action="NewScholarshipRequest" class="btn btn-secondary">Back to List</a>
</div>

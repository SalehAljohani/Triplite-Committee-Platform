@model Triplite_Committee_Platform.Models.ReasonsModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-50 mx-auto mt-3 rounded-4">
    <h3 class="mt-4 text-center"><strong>Add Reasons</strong></h3>
    <hr />
    <div class="card-body">
        <dl class="row g-3">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="ReqTypeID" for="CName" class=" control-label col-form-label text-center">Request Type</label>
                    </dt>
                    <dd class="col-sm-8">
                        <label asp-for="RequestType.RequestTypeName"></label>

                    </dd>
                </div>
                <hr />

                <div class="row">
                    <dt class="col-sm-4 fw-bold">
                        <label asp-for="Context" class="control-label col-form-label text-center">Context of reason</label>
                    </dt>
                    <dd class="col-sm-8">
                        <input asp-for="Context" class="form-control" />
                        <span asp-validation-for="Context" class="text-danger"></span>

                    </dd>
                </div>
                <hr />

                



                <div class="form-group mt-5  text-center">
                    <input type="submit" value="Create" class="btn btn-primary w-25" />


                </div>

            </form>
        </dl>
    </div>
</div>


<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
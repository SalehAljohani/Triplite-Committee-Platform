@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="text-center pt-5 mb-5">
    <h4>@ViewData["Title"]</h4>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 text-dark">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-5">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="text-center">
            <button type="submit" class="w-50 mb-5 btn btn-lg btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="row pb-4">
    <div class="col-sm-1"></div>
    <div class="col-sm-5">
        <p class="fs-6">
            <a id="Login" class="text-light text-decoration-none text-start" asp-page="./Login"><strong>Go back to Login</strong></a>
        </p>
        @*                     <p>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p> *@
    </div>
    <div class="col-sm-5 text-end">
        <p class="fs-6">
            <a class="text-light text-decoration-none" asp-area="" asp-controller="Support" asp-action="Index"><strong>Contact Support</strong></a> @* Create Contact Support Page *@
        </p>
    </div>
    <div class="col-sm-1"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
